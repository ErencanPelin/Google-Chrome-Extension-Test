{
  "manifest_version": 3,
  "name": "Backstory Alpha",
  "description": "One-click backstory behind popular news headlines powered by AI.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/logo_noback_32.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}